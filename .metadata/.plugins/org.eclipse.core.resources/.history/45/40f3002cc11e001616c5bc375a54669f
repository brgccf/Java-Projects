package sockets;

import java.io.ByteArrayOutputStream;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.net.DatagramSocket;
import java.net.Socket;
import java.util.Scanner;
public class TCPClient implements Runnable{
	private Socket clientSocket = null; //socket cliente
	private ObjectInputStream inputStream = null;
	private boolean isConnected = false;
	
	public TCPClient(){}
	
	public void run()
	{
		//accept connection
		while(!isConnected)
		{
			try
			{
				clientSocket = new Socket("localhost", 5050); //conectando com host na porta do servidor aberta
				inputStream = new ObjectInputStream(clientSocket.getInputStream()); //stream de entrada
				isConnected = true;
			}
			catch(Exception e)
			{
				System.out.println("Erro de conexao em cliente: " + e.getMessage());
			}
		}
			
	}
}
