package sockets;

import java.io.ByteArrayOutputStream;
import java.io.ObjectOutputStream;
import java.net.DatagramSocket;
import java.net.Socket;
import java.util.Scanner;
public class TCPClient {
	private Socket clientSocket = null; //socket cliente
	private ObjectOutputStream outputStream = null; //tcp de saida de cliente
	private boolean isConnected = false;
	private String sourceFilePath; //local raiz do arquivo
	private String destinationPath; //destino do arquivo
	
	public TCPClient(){}
	
	//metodo para conectar
	public void connect()
	{
		while(!isConnected)
		{
			try
			{
				clientSocket = new Socket("localhost", 5050); //abrindo conexao com servidor
				outputStream = new ObjectOutputStream(clientSocket.getOutputStream()); //canal de envio de dados
				isConnected = true;
			}
			catch(Exception e)
			{
				System.out.println("Erro de conexão: " + e.getMessage());
			}
		}
	}
	
	public static void main(String[] args) throws Exception{
		
	}
}
