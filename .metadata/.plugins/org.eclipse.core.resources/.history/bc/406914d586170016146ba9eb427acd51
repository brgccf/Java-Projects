package wro.Client;

import java.net.Socket;

import Streams.*;

public class MainCliente extends Thread {
	public static void main(String []args){
		try{
			Socket cliente = new Socket("G5C16",3000);	
			Thread a = new Thread(new Leitor(cliente));
			a.start(); // cria a thread de leitura da entrada
			
			(new Thread(new Escritor(cliente))).start(); // cria a thread de envio
			
		}
		catch (Exception e){
			System.out.println("erro Main" + e );
		}	
		
	}
}
