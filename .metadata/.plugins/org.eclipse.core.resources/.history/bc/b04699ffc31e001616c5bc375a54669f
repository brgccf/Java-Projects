package sockets;

import java.io.BufferedReader;
import java.io.ByteArrayOutputStream;
import java.io.InputStreamReader;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.net.DatagramSocket;
import java.net.Socket;
import java.util.Scanner;
public class TCPClient implements Runnable{
	private Socket clientSocket = null; //socket cliente
	private ObjectInputStream inputStream = null;
	private boolean isConnected = false;
	private BufferedReader socketIn = null;
	private ObjectOutputStream outputStream = null;
	public TCPClient(){}
	
	public void run()
	{
		//accept connection
		while(!isConnected)
		{
			try
			{
				clientSocket = new Socket("localhost", 5050); //conectando com host na porta do servidor aberta
				//resposta do servidor
				inputStream = new ObjectInputStream(clientSocket.getInputStream()); //stream de entrada
				isConnected = true;
			}
			catch(Exception e)
			{
				System.out.println("Erro de conexao em cliente: " + e.getMessage());
			}
		}
		
		while(true)
		{
			try
			{
				//recebendo resposta do servidor:
				//socketIn = new BufferedReader(new InputStreamReader(clientSocket.getInputStream()));
				
				//stream de saida:
				outputStream = new ObjectOutputStream(clientSocket.getOutputStream());
			}
			catch(Exception e)
			{
				System.out.println("Erro em operacao de cliente: " + e.getMessage());
			}
		}
		
		
			
	}
}
