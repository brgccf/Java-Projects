					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public ChatGui() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 572, 316);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		contentPane.setLayout(null);
		
		JPanel msgPanel = new JPanel();
		msgPanel.setBorder(new TitledBorder(UIManager.getBorder("TitledBorder.border"), "Messages", TitledBorder.LEADING, TitledBorder.TOP, null, new Color(0, 0, 0)));
		msgPanel.setBackground(Color.WHITE);
		msgPanel.setBounds(10, 118, 536, 148);
		contentPane.add(msgPanel);
		
		JPanel IPpanel = new JPanel();
		IPpanel.setBorder(new TitledBorder(null, "IP", TitledBorder.LEADING, TitledBorder.TOP, null, null));
		IPpanel.setToolTipText("");
		
		IPpanel.setBounds(436, 31, 110, 58);
		contentPane.add(IPpanel);
		
		textFieldIP = new JTextField();
		IPpanel.add(textFieldIP);
		textFieldIP.setText("0.0.0.0");
		textFieldIP.setToolTipText("Digite o IP...");
		textFieldIP.setColumns(10);
		
		JLabel txtFieldLabel = new JLabel("Text Field");
		txtFieldLabel.setVerticalAlignment(SwingConstants.TOP);
		txtFieldLabel.setBounds(10, 11, 179, 96);
		contentPane.add(txtFieldLabel);
		
		textField = new JTextField();
		txtFieldLabel.setLabelFor(textField);
		textField.setBounds(10, 31, 170, 66);
		contentPane.add(textField);
		textField.setColumns(10);
		
		JToggleButton tglConnect = new JToggleButton("Connect / Disconnect");
		tglConnect.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent arg0) {
				JOptionPane.showInternalConfirmDialog(null, "teste");
			}
		});
		tglConnect.setBounds(276, 31, 150, 58);
		contentPane.add(tglConnect);
		
		JButton btnSend = new JButton("Send");
		btnSend.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				String message = textField.getText();
				
			}
		});
		btnSend.setBounds(190, 61, 67, 37);
		contentPane.add(btnSend);
